#include "stdio.h"

int main() {
	char x ;
	printf("Enter a charcters : ");
	scanf("%c",&x);
	switch(x){
	    case 'a':
	    case 'A': printf("the char is vowel"); break;
	    case 'i':
	    case 'I':printf("the char is vowel");break;
	    case 'u':
	    case 'U':printf("the char is vowel");break;
	    case 'o':
	    case 'O':printf("the char is vowel");break;
	    case 'e':
	    case 'E':printf("the char is vowel");break;
	    default :printf("the char is constant");break;
	 
	}
	return 0 ;
}
