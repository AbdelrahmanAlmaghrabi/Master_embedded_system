#include <stdio.h>

int main() {
	float a[50];
	int x ,i;
	float sum ,ava ;
	sum=0;

	printf("Enter the number of data : ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&x);

	for(i=0;i<x;i++){
		printf("%d. Enter number :",i+1);
		fflush(stdin);fflush(stdout);
		scanf("%f",&a[i]);
		continue;
	}

	for(i=0;i<x;i++){
		sum=sum+a[i];
	}
	ava=sum/x;
	printf("average = %0.2f",ava);
	return 0;
}
