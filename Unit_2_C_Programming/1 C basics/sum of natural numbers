#include "stdio.h"

int main() {
	 int x,i,sum;
	 printf("enter the number :");
	 scanf("%d",&x);
	 if(x>0){
		 for(i=0;i<=x;i++){
			 sum=sum+i;
		 }
		 printf("the sum is : %d",sum);
	 }
	 else
		 printf("the number you enter is zero or negative");
	return 0 ;

}



