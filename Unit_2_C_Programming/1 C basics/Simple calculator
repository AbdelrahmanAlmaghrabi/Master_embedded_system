#include "stdio.h"

int main() {
	float x,y,z;
	char c;
	printf("enter the operation + ,- ,* ,divide\n");
	scanf("%c",&c);

	printf("enter two numbers : \n");
	scanf("%f %f",&x,&y);



	switch(c){
	case '+':
	{z=x+y; printf("the sum = %f", z); break;}
	case '-':
	{ z=x-y; printf("the sub = %f ",z);break;}
	case '*':
	{z=x*y; printf("the resoult is = %f" ,z);break;}
	case '/':
	{z=x/y; printf("the resoult is = %f " ,z);break;}
	default:
		printf("\nwronge input");
	}

	return 0 ;

}
