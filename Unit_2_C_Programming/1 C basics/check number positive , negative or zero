#include "stdio.h"

int main() {
	float x ;
	printf("Enter the numbers : " );
	scanf("%f",&x);
	//scanf( "%i %i %i %i", &minx, &maxx, &miny, &maxy);

	if(x>0)
		printf("the nummber :%.2f is positive ",x);
	else if(x<0)
		printf("the number : %.2f is negative " ,x);
	else
		printf("the number : %.2f is zero  ",x);

	return 0 ;

}




